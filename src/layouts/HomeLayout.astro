---
// src/layouts/HomeLayout.astro
const { title } = Astro.props;
---
<html lang="en" class="bg-white dark:bg-gray-900 text-gray-900 dark:text-gray-100">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>{title ? `${title} | Designstacks` : "Designstacks"}</title>
  </head>
  <body class="flex flex-col min-h-screen font-sans leading-relaxed">
    <slot name="header" />
    <main class="flex-grow w-full">{Astro.slots.default}</main>
    <slot name="footer" />
  </body>
</html>
