---
import Breadcrumbs from "@components/Breadcrumbs.astro";
import SpeedInsights from '@vercel/speed-insights/astro';
import Analytics from '@vercel/analytics/astro';

interface StringTitleProp {
  pageTitle: string;
  pageDesc?: string;
}
interface ArrayTitleProp {
  pageTitle: [string, string];
  titleTransition: string;
  pageDesc?: string;
}
export type Props = StringTitleProp | ArrayTitleProp;
const { props } = Astro;
---

<header class="profile-header">
  <img src="/images/timothy.jpg" alt="Timothy Kyalo" class="profile-img" />
  <h1 class="profile-name">Timothy Kyalo</h1>
</header>

<Breadcrumbs />
<main id="main-content">
  {
    "titleTransition" in props ? (
      <h1>
        {props.pageTitle[0]}
        <span transition:name={props.titleTransition}>
          {props.pageTitle[1]}
        </span>
      </h1>
    ) : (
      <h1>{props.pageTitle}</h1>
    )
  }
  <p>{props.pageDesc}</p>
  <slot />
</main>

<SpeedInsights />
<Analytics />

<style>
  .profile-header {
    @apply flex flex-col items-center justify-center mt-4 mb-6;
  }
  .profile-img {
    @apply w-24 h-24 rounded-full object-cover border-2 border-gray-300;
  }
  .profile-name {
    @apply mt-2 text-xl font-bold;
  }

  #main-content {
    @apply mx-auto w-full max-w-3xl px-4 pb-4;
  }
  #main-content h1 {
    @apply text-2xl font-semibold sm:text-3xl;
  }
  #main-content p {
    @apply mb-6 mt-2 italic;
  }
</style>
