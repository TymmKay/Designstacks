---
import ThemeToggle from "./ThemeToggle.astro";

const navLinks = [
  { name: "Floor Plans", href: "/floor-plans", key: "floorplans" },
  { name: "3D Renders", href: "/3d-renders", key: "renders" },
  { name: "About", href: "/about", key: "about" },
  { name: "Contact", href: "/contact", key: "contact" },
];

const currentPath = Astro.url.pathname;
const activeNav = navLinks.find((link) => currentPath.includes(link.key));
---

<header class="sticky top-0 z-50 bg-white dark:bg-gray-900 shadow-md border-b border-gray-200 dark:border-gray-700">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex justify-between items-center py-4">
      <!-- Logo -->
      <a href="/" class="logo" aria-label="Designstacks home page">
        <span class="font-bold text-2xl tracking-tight">🏠 Designstacks</span>
      </a>

      <!-- Always-visible Navigation -->
      <nav class="flex items-center space-x-8">
        {navLinks.map((link) => (
          <a
            href={link.href}
            class={`text-sm font-medium transition-colors ${
              activeNav?.key === link.key
                ? "text-blue-600 dark:text-blue-400"
                : "text-gray-600 dark:text-gray-300 hover:text-blue-500"
            }`}
          >
            {link.name}
          </a>
        ))}
      </nav>

      <!-- Actions -->
      <div class="flex items-center space-x-4">
        <ThemeToggle />
      </div>
    </div>
  </div>
</header>
