---
import Hr from "./Hr.astro";
import Socials from "./Socials.astro";

const currentYear = new Date().getFullYear();
---

<footer class="w-full mt-8">
  <Hr noPadding />
  <div
    class="flex flex-col items-center justify-between py-6 sm:flex-row-reverse sm:py-4 max-w-7xl mx-auto px-4 sm:px-6 lg:px-8"
  >
    <Socials centered />
    <div
      class="my-2 flex flex-col items-center whitespace-nowrap sm:flex-row text-gray-600 dark:text-gray-300 text-sm"
    >
      <span>&copy; {currentYear}</span>
      <span class="hidden sm:inline px-2">|</span>
      <span>All Rights Reserved. | Timothy Kyalo</span>
    </div>
  </div>
</footer>
