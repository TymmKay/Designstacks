---
import Hr from "./Hr.astro";
import Socials from "./Socials.astro";

const currentYear = new Date().getFullYear();
---

<footer class="w-full mt-8">
  <Hr noPadding />
  <div
    class="flex flex-col items-center justify-center space-y-4 py-6 max-w-7xl mx-auto px-4 sm:flex-row sm:space-y-0 sm:space-x-6 sm:justify-center sm:py-4"
  >
    <Socials centered />
    <div
      class="flex flex-col items-center whitespace-nowrap text-gray-600 dark:text-gray-300 text-sm sm:flex-row sm:items-center"
    >
      <span>&copy; {currentYear}</span>
      <span class="hidden sm:inline px-2">|</span>
      <span>All Rights Reserved. | Timothy Kyalo</span>
    </div>
  </div>
</footer>
