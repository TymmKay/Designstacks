---
const { title, description, image, link } = Astro.props;
---

<a
  href={link}
  class="block rounded-lg overflow-hidden shadow-md hover:shadow-lg transition transform hover:-translate-y-1 duration-200 bg-white dark:bg-gray-800"
>
  <!-- Increased image height from h-48 to h-96 -->
  <img
    src={image}
    alt={title}
    class="w-full h-96 object-cover"
  />
  <div class="p-6">
    <h3 class="font-semibold text-2xl mb-3 text-gray-900 dark:text-white">
      {title}
    </h3>
    <p class="text-gray-700 dark:text-gray-300 text-base">
      {description}
    </p>
  </div>
</a>
