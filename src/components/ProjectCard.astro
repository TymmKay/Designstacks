---
const { title, description, image, link } = Astro.props;
---

<a
  href={link}
  class="block rounded-lg overflow-hidden shadow-md hover:shadow-lg transition transform hover:-translate-y-1 duration-200 bg-white dark:bg-gray-800"
>
  <img src={image} alt={title} class="w-full h-48 object-cover" />
  <div class="p-4">
    <h3 class="font-semibold text-xl mb-2 text-gray-900 dark:text-white">{title}</h3>
    <p class="text-gray-700 dark:text-gray-300 text-sm">{description}</p>
  </div>
</a>
