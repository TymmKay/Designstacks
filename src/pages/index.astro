---
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import ProjectCard from "../components/ProjectCard.astro";

const projects = [
  {
    title: "Modern 3 Bedroom",
    description: "A sleek, modern home layout perfect for urban families.",
    image: "/images/floorplan1.jpeg",
    link: "/projects/modern-3-bedroom",
  },
  {
    title: "Luxury Villa",
    description: "Spacious villa with elegant design and large outdoor spaces.",
    image: "/images/floorplan2.jpeg",
    link: "/projects/luxury-villa",
  },
  {
    title: "Small House Plan",
    description: "Compact and efficient design ideal for small plots.",
    image: "/images/floorplan3.jpg",  // fixed double .jpg issue
    link: "/projects/small-house-plan",
  },
];
---

<html lang="en" class="bg-white dark:bg-gray-900 text-gray-900 dark:text-gray-100">
  <head>
    <title>Designstacks - Floor Plans & 3D Renders</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta
      name="description"
      content="Explore stunning floor plans and 3D architectural renders."
    />
  </head>
  <body class="flex flex-col min-h-screen bg-white dark:bg-gray-900 text-gray-900 dark:text-gray-100">
    <Header />

    <!-- Main container centered -->
    <main class="flex-grow w-full">
      <div class="max-w-7xl mx-auto px-4 py-12">
        <!-- Hero Section -->
        <section
          class="bg-gray-100 dark:bg-gray-800 py-16 rounded-lg shadow-md mb-12 text-center"
        >
          <div class="max-w-4xl mx-auto px-6">
            <h1
              class="text-5xl font-extrabold mb-4 text-gray-900 dark:text-white"
            >
              Discover Stunning Floor Plans & 3D Renders
            </h1>
            <p class="text-lg text-gray-700 dark:text-gray-300 mb-8">
              Explore our curated gallery of architectural designs and
              visualizations.
            </p>
            <a
              href="/floor-plans"
              class="inline-block bg-blue-600 hover:bg-blue-700 text-white font-semibold px-8 py-3 rounded-md transition"
              >Browse Floor Plans</a
            >
          </div>
        </section>

        <!-- Projects Grid -->
        <section>
          <h2 class="text-3xl font-bold mb-8 text-center">Our Projects</h2>
          <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-8">
            {projects.map((project) => (
              <ProjectCard {...project} />
            ))}
          </div>
        </section>
      </div>
    </main>

    <Footer />
  </body>
</html>
