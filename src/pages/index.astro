---
import Layout from '../layouts/Layout.astro';
import ProjectCard from '../components/ProjectCard.astro';

const projects = [
  {
    title: "Modern Apartment Floor Plan",
    description: "A clean, functional 2-bedroom layout with optimized space usage.",
    image: "/images/floorplan-apartment.jpg",
    link: "/projects/apartment-floorplan"
  },
  {
    title: "Luxury Villa 3D Render",
    description: "Realistic 3D visualization of a luxury villa interior and exterior.",
    image: "/images/villa-3d.jpg",
    link: "/projects/villa-3d-render"
  },
  {
    title: "Office Layout Plan",
    description: "An efficient corporate office floor plan with collaboration areas.",
    image: "/images/office-layout.jpg",
    link: "/projects/office-layout"
  },
  {
    title: "Kitchen Interior 3D",
    description: "A modern kitchen design with 3D rendered textures and lighting.",
    image: "/images/kitchen-3d.jpg",
    link: "/projects/kitchen-3d"
  }
];
---

<Layout title="Designstacks – Floor Plans & 3D Renders">
  <section class="text-center py-12">
    <h1 class="text-4xl font-bold text-skin-base mb-4">
      Designstacks: Bringing Ideas to Life
    </h1>
    <p class="max-w-2xl mx-auto text-lg text-skin-base opacity-80">
      We specialize in detailed architectural floor plans and stunning 3D visualizations. 
      Whether it’s residential, commercial, or custom projects — we turn concepts into reality.
    </p>
  </section>

  <section class="grid gap-8 sm:grid-cols-2 lg:grid-cols-3 py-8">
    {projects.map(project => (
      <ProjectCard {...project} />
    ))}
  </section>

  <section class="text-center py-12 bg-skin-card rounded-lg mt-8">
    <h2 class="text-2xl font-semibold text-skin-base mb-4">
      Let’s Design Your Vision
    </h2>
    <p class="max-w-xl mx-auto text-skin-base opacity-80 mb-6">
      Need a custom floor plan or 3D render for your next project? 
      Get in touch and we’ll make it happen.
    </p>
    <a href="/contact" class="px-6 py-3 bg-skin-accent text-white rounded-lg hover:opacity-90">
      Contact Us
    </a>
  </section>
</Layout>
