---
import { SITE } from "@config";
import Layout from "../layouts/Layout.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import ProjectCard from "../components/ProjectCard.astro";

const projects = [
  {
    title: "Modern 3 Bedroom",
    description: "A sleek, modern home layout perfect for urban families.",
    image: "/images/floorplan1.jpg",
    link: "/projects/modern-3-bedroom",
  },
  {
    title: "Luxury Villa",
    description: "Spacious villa with elegant design and large outdoor spaces.",
    image: "/images/floorplan2.jpg",
    link: "/projects/luxury-villa",
  },
  {
    title: "Small House Plan",
    description: "Compact and efficient design ideal for small plots.",
    image: "/images/floorplan3.jpg",
    link: "/projects/small-house-plan",
  },
];
---

<Layout title={`Home | ${SITE.title}`}>
  <Header activeNav="home" />

  <main id="main-content">
    <!-- Hero Section -->
    <section class="prose mb-28 max-w-3xl text-center mx-auto">
      <h1 class="text-4xl font-extrabold">Discover Stunning Floor Plans & 3D Renders</h1>
      <p class="text-lg text-gray-600 dark:text-gray-300 mt-4">
        Explore our curated gallery of architectural designs and visualizations.
      </p>
      <a
        href="/floor-plans"
        class="inline-block mt-6 bg-green-600 hover:bg-green-700 text-white font-semibold px-8 py-3 rounded-md transition"
      >
        Browse Floor Plans
      </a>
    </section>

    <!-- Projects Grid -->
    <section class="max-w-7xl mx-auto px-4 py-8">
      <h2 class="text-3xl font-bold mb-8 text-center">Our Projects</h2>
      <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-8">
        {projects.map((project) => (
          <ProjectCard {...project} />
        ))}
      </div>
    </section>
  </main>

  <Footer />
</Layout>
