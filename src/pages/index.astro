---
import HomeLayout from "../layouts/HomeLayout.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import ProjectCard from "../components/ProjectCard.astro";

const projects = [
  {
    title: "Modern 3 Bedroom",
    description: "A sleek, modern home layout perfect for urban families.",
    image: "/images/floorplan1.jpeg",
    link: "/projects/modern-3-bedroom",
  },
  {
    title: "Luxury Villa",
    description: "Spacious villa with elegant design and large outdoor spaces.",
    image: "/images/floorplan2.jpeg",
    link: "/projects/luxury-villa",
  },
  {
    title: "Small House Plan",
    description: "Compact and efficient design ideal for small plots.",
    image: "/images/floorplan3.jpg",
    link: "/projects/small-house-plan",
  },
];
---

<HomeLayout title="Home">
  <Fragment slot="header">
    <Header />
  </Fragment>

  <!-- Hero Section -->
  <section class="bg-gradient-to-r from-blue-600 to-indigo-700 text-white py-20 shadow-lg">
    <div class="max-w-4xl mx-auto text-center px-6">
      <h1 class="text-5xl font-extrabold mb-4">Discover Stunning Floor Plans & 3D Renders</h1>
      <p class="text-lg text-blue-100 mb-8">
        Explore our curated gallery of architectural designs and visualizations.
      </p>
      <a
        href="/floor-plans"
        class="inline-block bg-white text-blue-700 hover:bg-blue-50 font-semibold px-8 py-3 rounded-md transition"
      >
        Browse Floor Plans
      </a>
    </div>
  </section>

  <!-- Projects Grid -->
  <section class="max-w-7xl mx-auto px-4 py-16">
    <h2 class="text-3xl font-bold mb-8 text-center">Our Projects</h2>
    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-8">
      {projects.map((project) => (
        <ProjectCard {...project} />
      ))}
    </div>
  </section>

  <Fragment slot="footer">
    <Footer />
  </Fragment>
</HomeLayout>
