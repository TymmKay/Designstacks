---
import Layout from '../layouts/Layout.astro';
import Card from '../components/Card.astro';

const latestPlans = [
  {
    title: "Modern 3-Bedroom Bungalow",
    description: "Spacious design with open kitchen, master ensuite, and patio view.",
    image: "/images/floorplans/modern-bungalow.jpg",
    link: "/plans/modern-bungalow"
  },
  {
    title: "Luxury Villa with Pool",
    description: "Elegant villa design with rooftop lounge and infinity pool.",
    image: "/images/floorplans/luxury-villa.jpg",
    link: "/plans/luxury-villa"
  }
];

const latestRenders = [
  {
    title: "Cozy Minimalist Living Room",
    description: "3D render showing warm lighting and minimalist interior design.",
    image: "/images/renders/minimalist-living.jpg",
    link: "/renders/minimalist-living"
  },
  {
    title: "Contemporary Kitchen Space",
    description: "Open-plan kitchen with high-end finishes and skylight.",
    image: "/images/renders/contemporary-kitchen.jpg",
    link: "/renders/contemporary-kitchen"
  }
];
---

<Layout title="Designstacks â€” Floor Plans & 3D Renders">
  <section class="my-10 text-center">
    <h1 class="text-4xl font-bold text-skin-accent">Welcome to Designstacks</h1>
    <p class="mt-4 text-lg text-skin-base max-w-2xl mx-auto">
      Explore a curated collection of <strong>floor plans</strong> and stunning <strong>3D renders</strong> 
      to inspire your dream home designs.
    </p>
  </section>

  <section class="my-12">
    <h2 class="text-2xl font-semibold mb-6">Latest Floor Plans</h2>
    <div class="grid md:grid-cols-2 gap-6">
      {latestPlans.map(plan => (
        <Card {...plan} />
      ))}
    </div>
  </section>

  <section class="my-12">
    <h2 class="text-2xl font-semibold mb-6">3D Render Gallery</h2>
    <div class="grid md:grid-cols-2 gap-6">
      {latestRenders.map(render => (
        <Card {...render} />
      ))}
    </div>
  </section>
</Layout>
